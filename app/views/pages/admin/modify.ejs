<%- contentFor('content') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="titre_dashboard">Modifier l'article</h2>
        <form method="post" action="/modify/<%= article.id %>" encType="multipart/form-data">
          <div class="form-group col-md-7">
            <label for="articleTitle">Titre de l'article</label>
            <input type="text" name="title" value="<%= article.title %>" class="form-control" id="articleTitle" placeholder="Titre...">
          </div>
          <div class="form-group col-md-5">
            <label for="exampleInputFile">Photo</label>
            <input type="file" value="<%= article.img %>" name="imgArticle">
            <figure>
              <img src="/img/imgArticles/<%= article.img %>" alt="" style="width:300px;height:300px">
            </figure>
            <p class="help-block">Format .png .jpeg Maximum 2Mo.</p>
          </div>
          <div class="form-group col-md-12">
            <label for="articleContent">Texte</label>
            <textarea class="form-control" name="content" type="text" id="articleContent" placeholder="Votre contenu..." rows="10"><%= article.content %></textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-default">Annuler</button>
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
          </div>
        </form>
      </div>
    </div>
  </div>