<%- contentFor('content') %>
<div>
  <a href="#">
    <strong>
      <span class="fa fa-plus-square-o"></span> Modifier un article</strong>
  </a>
  <hr>
</div>
<div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
  <form method="post" action="/modify">
    <div class="form-group col-md-7">
      <label for="articleTitle">Titre de l'article</label>
      <input type="text" name="title" class="form-control" id="articleTitle" value="<%= article.title%>" placeholder="Titre..." >
    </div>
    <div class="form-group col-md-5">
      <label for="exampleInputFile">Photo</label>
      <input type="file" name="articlePhoto" id="exampleInputFile">
      <p class="help-block">Format .png .jpeg Maximum 2Mo.</p>
    </div>
    <div class="form-group col-md-12">
      <label for="articleContent">Texte</label>
      <textarea class="form-control" name="content" type="text" id="articleContent" placeholder="Votre contenu..." rows="3"><%= article.content%></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-default">Annuler</button>
      <button type="submit" class="btn btn-primary">Sauvegarder</button>
    </div>
  </form>
</div>