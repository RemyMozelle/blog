<%- contentFor('content') %>
  <div>
    <a href="#">
      <strong>
        <span class="fa fa-user-secret"></span> Éditer mon profil</strong>
    </a>
    <hr>
  </div>
  <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
    <form method="post" action="/updateprofil" encType="multipart/form-data">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="form-group col-md-6">
              <label for="lastname">Prénom</label>
              <input type="text" class="form-control" name="name" placeholder="Prénom..." value="<%= profil.name %>">
            </div>
            <div class="form-group col-md-6">
              <label for="surname">Nom</label>
              <input type="text" class="form-control" name="surname" placeholder="Nom..." value="<%= profil.surname %>">
            </div>
          </div>
        </div>
        <div class="form-group col-md-4">
          <label for="avatar">Photo</label>
          <input type="file" name="avatar">
          <figure>
            <img src="/img/avatars/admin/<%= profil.avatar %>" alt="" style="width:300px;height:300px">
          </figure>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <label for="emailadress">Adresse mail</label>
          <input type="email" class="form-control" name="email" placeholder="adress@email.com" value="<%= profil.email %>">
          <label for="newpassword">Nouveau mot de passe</label>
          <input type="password" class="form-control" name="password" placeholder="Nouveau mot de passe">
          <label for="confirmpassword">Confirmation de mot de passe</label>
          <input type="password" class="form-control" name="confirm" placeholder="Confirmation de mot de passe">
        </div>
        <div class="form-group col-md-6">
          <label for="about">About</label>
          <textarea class="form-control" name="about" type="text" placeholder="À propos de vous..." rows="8"><%= profil.about %></textarea>
        </div>
      </div>
      <br>
      <div class="text-center">
        <button type="button" class="btn btn-default">
          <a href="/dashboard">Annuler</a>
        </button>
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
      </div>
    </form>
  </div>