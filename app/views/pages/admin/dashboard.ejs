<%- contentFor('content') %>
  <div>
    <a href="#">
      <strong>
        <span class="fa fa-dashboard"></span> Gestion des acticles</strong>
    </a>
    <hr>
  </div>
  <div class="content">
    <div class="card card-plain">
      <div class="content table-responsive table-full-width">
        <table class="table table-hover">
          <thead>
            <th>Statut</th>
            <th>Article</th>
            <th>Date de publication</th>
            <th>Publication</th>
            <th>Modifier</th>
            <th>Supprimer</th>
          </thead>
          <tbody>
            <% allArticles.forEach(function(element){ %>
              <% element.title %>
                <tr>
                  <td class="text-center">
                    <% if(element.status == 1){%>
                      <i class="fa fa-circle" style="color: green;"></i>
                      <%} else {%>
                        <i class="fa fa-circle" style="color: red;"></i>
                        <%}%>
                  </td>
                  <td>
                    <p>
                      <%= element.title%>
                    </p>
                  </td>
                  <td>
                    <%= element.createAt.toString().substr(0, 15) %>
                  </td>
                  <td class="text-center">
                    <% if (element.status == 0) { %>
                      <a class="btn btn-success" href="/updateStatus/<%=element.id%>" role="button">Publier</a>
                      <% } %>
                        <% if (element.status == 1) { %>
                          <a class="btn btn-danger reversible" href="/updateStatus/<%=element.id%>" role="button">Brouillon</a>
                          <% } %>
                  </td>
                  <td class="text-center">
                    <a href="/modify/<%= element.id%>">
                      <i class="fa fa-pencil-square-o"></i>
                    </a>
                  </td>
                  <td class="text-center">
                    <a href="/delete/<%= element.id%>">
                      <i class="fa fa-trash-o"></i>
                    </a>
                  </td>
                </tr>
                <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>