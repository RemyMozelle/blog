<h1>Articles r√©cents :</h1>
<div class="row">
  <!-- 1er article -->
  <% allArticles.forEach(articles => { %>
    <% if(articles.status === 1) { %>
    <article>
      <div class="col-md-6">
        <div class="thumbnail text-center">
          <img class="img-article-apercu img-responsive center-block" src="/img/imgArticles/<%= articles.img %>" alt="articlePicture">
          <div class="caption">
            <h3>
              <%= articles.title %>
            </h3>
            <p class="apercu">
              <%= articles.content %>
            </p>
            <p class="date">
              <%= articles.createAt.toString().substr(0, 15) %>
            </p>
            <p>
              <a href="/articles/<%= articles.id%>" class="btn btn-primary" role="button">Read More</a>
              <a href="#" class="btn btn-default" role="button">
                <i class="fa fa-heart" aria-hidden="true"></i> 0
              </a>
              <a class="btn btn-default btn-comment" disabled>
                <i class="fa fa-commenting-o" aria-hidden="true"></i> 0
              </a>
            </p>
          </div>
        </div>
      </div>
    </article>
    <% } %>
  <% }) %>
</div>